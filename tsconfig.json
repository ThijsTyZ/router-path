{
  "compilerOptions": {
    "baseUrl": "./src/",
    "rootDir": "./src/",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ],
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}